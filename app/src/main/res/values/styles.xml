<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/sch_green</item>
        <item name="colorPrimaryDark">@color/sch_dark_green</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="TeacherStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/sch_green</item>
        <item name="colorPrimaryDark">@color/sch_dark_green</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TutorialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="HeaderStyle">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/material_text_size</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DoneButtons">
        <item name="android:textSize">@dimen/material_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:background">@drawable/done_button_background</item>
        <item name="android:textColor">#009688</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CategoriesStyle">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
