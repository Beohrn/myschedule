<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
    <declare-styleable name="QuizView">
        <attr name="mode" format="enum">
            <enum name="fullscreen" value="0"/>
            <enum name="with_comments" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="ImportanceLevelView">
        <attr name="levelSelected" format="boolean"/>
        <attr name="levelColor" format="color"/>
        <attr name="levelText" format="string"/>
    </declare-styleable>

    <declare-styleable name="MarkView">
        <attr name="color_mark" format="color"/>
        <attr name="text" format="string"  />
    </declare-styleable>

    <declare-styleable name="CustomEditText">
        <attr name="hint" format="string"/>
        <attr name="inputType">
            <flag name="numberDecimal" value="0x00002002" />
            <flag name="text" value="0x00000001" />
        </attr>
        <attr name="maxLength" format="integer" />
    </declare-styleable>

    <declare-styleable name="CustomTextView">
        <attr name="title_text" format="string"/>
        <attr name="time_text" format="string"/>
    </declare-styleable>
</resources>