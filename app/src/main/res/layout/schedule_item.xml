<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:background="@color/colorPrimary"
        app:cardElevation="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:id="@+id/edit"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="12:40 - 12:50"
                    android:textColor="@color/red"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="История Украинской культуры"
                        android:textColor="@color/silver"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/boy"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:minHeight="40dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Петров Валерий Георгиевич "
                            android:textColor="@color/silver"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="7dp"
                            android:src="@drawable/location_point"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.4"
                            android:gravity="center|left"
                            android:minHeight="40dp"
                            android:text="Аудитория 303"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.6"
                            android:gravity="center"
                            android:minHeight="40dp"
                            android:text="Лекция"
                            android:textColor="@color/location_point"
                            android:textSize="15sp"
                            android:textStyle="italic|bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/expand_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Посмотреть все задачи (5)"
                            android:textColor="@color/silver"
                            android:textSize="11sp"/>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="7dp"
                            android:background="@color/silver_lite">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/silver_lite"
                                android:hint="add sub task"
                                android:paddingLeft="20dp"
                                android:textColor="@color/black"
                                android:textCursorDrawable="@null"
                                android:textSize="13sp"/>

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:gravity="right">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:padding="11dp"
                                android:src="@drawable/check_list"/>

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:padding="11dp"
                                android:src="@drawable/invert_color"/>

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:padding="11dp"
                                android:src="@drawable/attach_file"/>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/view"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/title_frame"
        app:cardElevation="7dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="35dp"
            android:text="1 пара"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>