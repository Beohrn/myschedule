<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:custom="http://schemas.android.com/apk/res/com.shedule.zyx.myshedule.widget"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="10dp"
              android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            style="@style/HeaderStyle"
            android:id="@+id/header_bottom_sheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Выберите номер и тип пары"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:weightSum="1">

        <Spinner
            android:id="@+id/spinner_number_of_lesson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:drawSelectorOnTop="true"
            android:entries="@array/number_of_lesson"/>

        <Spinner
            android:id="@+id/spinner_type_of_lesson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:drawSelectorOnTop="true"
            android:entries="@array/type_of_lesson"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="7dp"
        android:paddingTop="7dp">

        <com.shedule.zyx.myshedule.widget.MarkView
            android:id="@+id/exam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text="Экзамен"/>

        <com.shedule.zyx.myshedule.widget.MarkView
            android:id="@+id/course_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text="Курсовая работа"/>

        <com.shedule.zyx.myshedule.widget.MarkView
            android:id="@+id/standings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text="Зачёт"/>

        <com.shedule.zyx.myshedule.widget.MarkView
            android:id="@+id/home_exam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text="Расчётка"/>

    </LinearLayout>
</LinearLayout>